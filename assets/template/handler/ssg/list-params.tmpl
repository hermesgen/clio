{{ define "page" }}
{{ template "layout" . }}
{{ end }}

{{ define "title" }}
Param List
{{ end }}

{{ define "content" }}
<div class="space-y-8">
  <h1 class="text-2xl font-bold mb-4">Param List</h1>
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/5">
          Name
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/5">
          Value
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/5">
          Ref Key
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/5">
          Description
        </th>
        <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/5">
          Actions
        </th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      {{ $csrf := .Form.CSRF }}
      {{ range .Data }}
      <tr>
        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
          <a href="show-param?id={{ .ID }}" class="text-blue-500 hover:underline">{{ .Name }}</a>
        </td>
        <td class="px-6 py-4 text-sm text-gray-500">
          {{ .Value }}
        </td>
        <td class="px-6 py-4 text-sm text-gray-500">
          {{ .RefKey }}
        </td>
        <td class="px-6 py-4 text-sm text-gray-500">
          {{ .Description }}
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center space-x-2">
          <a href="show-param?id={{ .ID }}" class="inline-block bg-green-500 text-white px-6 py-2 rounded w-24">Show</a>
          <a href="edit-param?id={{ .ID }}" class="inline-block bg-yellow-500 text-white px-6 py-2 rounded w-24">Edit</a>
          <form action="delete-param?id={{ .ID }}" method="POST" class="inline">
            <input type="hidden" name="aquamarine.csrf.token" value="{{ $csrf }}" />
            <button type="submit" class="inline-block px-6 py-2 rounded w-24 {{ if .IsSystem }}bg-gray-400 text-gray-700 cursor-not-allowed{{ else }}bg-red-500 text-white{{ end }}" {{ if .IsSystem }}disabled title="Non Deletable"{{ end }}>
              Delete
            </button>
          </form>
        </td>
      </tr>
      {{ else }}
      <tr>
        <td colspan="5" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
          No params found.
        </td>
      </tr>
      {{ end }}
    </tbody>
  </table>
</div>
{{ end }}

{{ define "submenu" }}
<div class="mx-auto p-4">
  <div class="flex space-x-4 justify-center">
    <a href="{{ newPath "param" }}" class="btn btn-primary">New</a>
  </div>
</div>
{{ end }}
