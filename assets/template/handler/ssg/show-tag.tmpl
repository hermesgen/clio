{{ define "page" }}
{{ template "layout" . }}
{{ end }}

{{ define "title" }}
{{ .Data.Name }}
{{ end }}

{{ define "content" }}
<div class="space-y-4">
    <h1 class="text-2xl font-bold">{{ .Data.Name }}</h1>
    <p><strong>Slug:</strong> {{ .Data.Slug }}</p>
</div>
{{ end }}

{{ define "submenu" }}
<div class="mx-auto p-4">
  <div class="flex space-x-4 justify-center">
    <a href="{{ listPath "tag" }}" class="btn btn-secondary">Back</a>
  </div>
</div>
{{ end }}
