{{ define "page" }}
{{ template "layout" . }}
{{ end }}

{{ define "title" }}
Tags
{{ end }}

{{ define "content" }}
<h1 class="text-2xl font-bold mb-4">Tags</h1>

<div class="overflow-x-auto">
  <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
    <thead class="bg-gray-800 text-white">
      <tr>
        <th class="py-3 px-4 uppercase font-semibold text-sm">Name</th>
        <th class="py-3 px-4 uppercase font-semibold text-sm">Slug</th>
        <th class="py-3 px-4 uppercase font-semibold text-sm">Actions</th>
      </tr>
    </thead>
    <tbody class="text-gray-700">
      {{ range .Data }}
      <tr class="border-b border-gray-200 hover:bg-gray-100">
        <td class="py-3 px-4">{{ .Name }}</td>
        <td class="py-3 px-4">{{ .Slug }}</td>
        <td class="py-3 px-4">
          <a href="{{ EditPath . }}" class="text-blue-600 hover:text-blue-900 mr-2">Edit</a>
          <a href="{{ ShowPath . }}" class="text-green-600 hover:text-green-900 mr-2">Show</a>
          <form hx-post="{{ DeletePath . }}" hx-confirm="Are you sure you want to delete this tag?" hx-target="closest tr" hx-swap="outerHTML" style="display:inline;">
            <input type="hidden" name="id" value="{{ .ID }}">
            <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
          </form>
        </td>
      </tr>
      {{ end }}
    </tbody>
  </table>
</div>
{{ end }}

{{ define "submenu" }}
<div class="mx-auto p-4">
  <div class="flex space-x-4 justify-center">
    <a href="{{ newPath "tag" }}" class="btn btn-primary">New</a>
  </div>
</div>
{{ end }}
