{{ define "page" }}
{{ template "layout" . }}
{{ end }}

{{ define "title" }}
{{ .Data.Name }}
{{ end }}

{{ define "content" }}
<div class="space-y-4">
    <h1 class="text-2xl font-bold">Image: {{ .Data.Name }}</h1>

    <div class="mb-4">
        <h2 class="text-xl font-semibold">Preview:</h2>
        <img src="{{ .Data.URL }}" alt="{{ .Data.AltText }}" class="max-w-full h-auto rounded-md shadow-md" />
    </div>

    <div class="mb-4">
        <h2 class="text-xl font-semibold">Description:</h2>
        <p class="text-gray-700">{{ .Data.Description }}</p>
    </div>

    <div class="mb-4">
        <h2 class="text-xl font-semibold">Alt Text:</h2>
        <p class="text-gray-700">{{ .Data.AltText }}</p>
    </div>

    <div class="mb-4">
        <h2 class="text-xl font-semibold">URL:</h2>
        <p class="text-blue-600 break-all">{{ .Data.URL }}</p>
    </div>

    <div class="mb-4">
        <h2 class="text-xl font-semibold">Path:</h2>
        <p class="text-gray-700 break-all">{{ .Data.Path }}</p>
    </div>

    <div class="mb-4">
        <h2 class="text-xl font-semibold">Mime Type:</h2>
        <p class="text-gray-700">{{ .Data.MimeType }}</p>
    </div>

    <div class="mb-4">
        <h2 class="text-xl font-semibold">Size:</h2>
        <p class="text-gray-700">{{ .Data.Size }} bytes</p>
    </div>

    <div class="mb-4">
        <h2 class="text-xl font-semibold">Dimensions:</h2>
        <p class="text-gray-700">{{ .Data.Width }}x{{ .Data.Height }}</p>
    </div>

    <div class="mt-6">
        <a href="list-image-variants?imageID={{ .Data.ID }}" class="inline-block bg-blue-600 text-white px-6 py-2 rounded-md shadow-sm hover:bg-blue-700">View Variants</a>
    </div>
</div>
{{ end }}

{{ define "submenu" }}
<div class="mx-auto p-4">
  <div class="flex space-x-4 justify-center">
    <a href="{{ listPath "image" }}" class="btn btn-secondary">Back</a>
  </div>
</div>
{{ end }}
